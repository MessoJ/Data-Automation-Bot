    <script>
        // Mobile navigation toggle
        const mobileToggle = document.querySelector('.mobile-toggle');
        const navMenu = document.querySelector('.nav-menu');

        if (mobileToggle && navMenu) {
            mobileToggle.addEventListener('click', function () {
                navMenu.classList.toggle('active');
            });
        }

        // FAQ accordions
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const faqItem = question.parentElement;
                faqItem.classList.toggle('active');

                // Update the toggle symbol
                const toggle = question.querySelector('.toggle');
                toggle.textContent = faqItem.classList.contains('active') ? '-' : '+';
            });
        });

        // Improved toast notification system
        function showToast(message, type = 'info') {
            const toastContainer = document.querySelector('.toast-container');
            if (!toastContainer) return;

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <div style="display: flex; align-items: center; gap: 8px;">
                    <span>${message}</span>
                    <button onclick="this.parentElement.parentElement.remove()" style="background: none; border: none; color: inherit; cursor: pointer; margin-left: auto;">×</button>
                </div>
            `;

            toastContainer.appendChild(toast);

            setTimeout(() => {
                toast.classList.add('show');
            }, 100);

            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (toast.parentElement) {
                        toast.remove();
                    }
                }, 300);
            }, 5000);
        }

        // Enhanced Stripe Payment Integration
        let stripe;
        let stripeConfigLoaded = false;

        // Initialize Stripe
        async function initializeStripe() {
            if (stripeConfigLoaded) return;
            
            try {
                const response = await fetch('/api/stripe/config');
                const config = await response.json();
                stripe = Stripe(config.publishableKey);
                stripeConfigLoaded = true;
            } catch (error) {
                console.error('Error loading Stripe configuration:', error);
                showToast('Payment system temporarily unavailable', 'warning');
            }
        }

        // Start trial with Stripe integration
        async function startTrial(plan) {
            showToast(`Starting your ${plan} trial...`, 'info');
            
            try {
                // Initialize Stripe if not already done
                await initializeStripe();
                
                // Show trial signup modal
                showTrialSignupModal(plan);
                
            } catch (error) {
                console.error('Error starting trial:', error);
                showToast('Error starting trial. Please try again.', 'error');
            }
        }

        // Show trial signup modal with email collection
        function showTrialSignupModal(plan) {
            const modal = document.createElement('div');
            modal.className = 'trial-modal-overlay';
            modal.innerHTML = `
                <div class="trial-modal">
                    <div class="trial-modal-header">
                        <h2>Start Your 14-Day Free Trial</h2>
                        <p>Get full access to ${plan.charAt(0).toUpperCase() + plan.slice(1)} Plan features</p>
                        <button class="modal-close" onclick="closeTrialModal()">&times;</button>
                    </div>
                    <div class="trial-modal-body">
                        <div class="trial-form">
                            <div class="input-group">
                                <label for="trial-name">Full Name</label>
                                <input type="text" id="trial-name" placeholder="Enter your full name" required>
                            </div>
                            <div class="input-group">
                                <label for="trial-email">Email Address</label>
                                <input type="email" id="trial-email" placeholder="Enter your email address" required>
                            </div>
                            <div class="trial-features">
                                <h4>✨ What's included in your trial:</h4>
                                <ul>
                                    <li>✅ Full access to all ${plan} features</li>
                                    <li>✅ Connect multiple platforms</li>
                                    <li>✅ Real-time inventory sync</li>
                                    <li>✅ Advanced analytics</li>
                                    <li>✅ Priority support</li>
                                    <li>✅ No credit card required</li>
                                </ul>
                            </div>
                            <div class="trial-actions">
                                <button class="btn-trial-start" onclick="processTrial('${plan}')" disabled>
                                    <span class="btn-text">Start Free Trial</span>
                                    <span class="btn-loader" style="display: none;">
                                        <svg class="spinner" viewBox="0 0 24 24">
                                            <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="4"></circle>
                                            <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                        </svg>
                                    </span>
                                </button>
                                <p class="trial-note">14 days free • Cancel anytime • No hidden fees</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // Add event listeners
            const nameInput = document.getElementById('trial-name');
            const emailInput = document.getElementById('trial-email');
            const startButton = document.querySelector('.btn-trial-start');
            
            function validateForm() {
                const name = nameInput.value.trim();
                const email = emailInput.value.trim();
                const isValid = name && email && isValidEmail(email);
                startButton.disabled = !isValid;
            }
            
            nameInput.addEventListener('input', validateForm);
            emailInput.addEventListener('input', validateForm);
            
            // Focus on first input
            setTimeout(() => nameInput.focus(), 100);
        }

        // Process trial signup
        async function processTrial(plan) {
            const nameInput = document.getElementById('trial-name');
            const emailInput = document.getElementById('trial-email');
            const startButton = document.querySelector('.btn-trial-start');
            const btnText = startButton.querySelector('.btn-text');
            const btnLoader = startButton.querySelector('.btn-loader');
            
            const name = nameInput.value.trim();
            const email = emailInput.value.trim();
            
            if (!name || !email || !isValidEmail(email)) {
                showToast('Please enter valid name and email', 'error');
                return;
            }
            
            // Show loading state
            startButton.disabled = true;
            btnText.style.display = 'none';
            btnLoader.style.display = 'inline-flex';
            
            try {
                const response = await fetch('/api/stripe/create-trial', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        plan: plan,
                        name: name,
                        email: email
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    closeTrialModal();
                    showSuccessMessage(result);
                    
                    // Redirect to dashboard after delay
                    setTimeout(() => {
                        window.location.href = '/web/';
                    }, 2000);
                } else {
                    throw new Error(result.error || 'Failed to start trial');
                }
                
            } catch (error) {
                console.error('Error processing trial:', error);
                showToast(error.message || 'Error starting trial. Please try again.', 'error');
            } finally {
                // Reset button state
                startButton.disabled = false;
                btnText.style.display = 'inline';
                btnLoader.style.display = 'none';
            }
        }

        // Close trial modal
        function closeTrialModal() {
            const modal = document.querySelector('.trial-modal-overlay');
            if (modal) {
                modal.remove();
            }
        }

        // Show success message
        function showSuccessMessage(result) {
            const successModal = document.createElement('div');
            successModal.className = 'success-modal-overlay';
            successModal.innerHTML = `
                <div class="success-modal">
                    <div class="success-icon">✅</div>
                    <h2>Trial Started Successfully!</h2>
                    <p>Your 14-day free trial for <strong>${result.plan}</strong> is now active.</p>
                    <div class="success-details">
                        <p>🎉 Full access to all features</p>
                        <p>📧 Confirmation email sent</p>
                        <p>⏰ Trial ends: ${new Date(result.trialEnd * 1000).toLocaleDateString()}</p>
                    </div>
                    <p>Redirecting to your dashboard...</p>
                </div>
            `;
            
            document.body.appendChild(successModal);
            
            // Auto-close after 3 seconds
            setTimeout(() => {
                successModal.remove();
            }, 3000);
        }

        // Email validation
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // Checkout session for immediate payment
        async function createCheckoutSession(plan) {
            try {
                const response = await fetch('/api/stripe/create-checkout-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ plan: plan })
                });
                
                const session = await response.json();
                
                if (session.success) {
                    // Redirect to Stripe Checkout
                    window.location.href = session.url;
                } else {
                    throw new Error(session.error || 'Failed to create checkout session');
                }
                
            } catch (error) {
                console.error('Error creating checkout session:', error);
                showToast('Payment system error. Please try again.', 'error');
            }
        }

        // Initialize Stripe when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeStripe();
        });
    </script>
</body>

</html>